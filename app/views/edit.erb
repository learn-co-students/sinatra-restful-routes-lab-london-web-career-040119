<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><input type="text" name="name" id="name" value="<%= @recipe.name %>"></p>
  <p><input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"></p>
  <p><input type="submit" value="Create recipe"></p>
</form>
